{
  "name": "@openhouse/unified-portal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0 -p 5000",
    "build": "next build",
    "build:standalone": "NEXT_TELEMETRY_DISABLED=1 next build",
    "package:replit": "rm -rf .replit-deploy && mkdir -p .replit-deploy && cp -R .next/standalone/* .replit-deploy/ && mkdir -p .replit-deploy/.next && cp -R .next/static .replit-deploy/.next/static && cp -R public .replit-deploy/public || true",
    "start": "next start -p ${PORT:-5000}",
    "typecheck": "tsc --noEmit",
    "lint": "next lint || true",
    "smoke": "bash scripts/smoke-test.sh http://localhost:5000",
    "load-test": "node scripts/load-test.js http://localhost:5000 10 10",
    "test:stability": "npm run typecheck && npm run build && npm run smoke",
    "hardening:test": "npx tsx scripts/hardening/test-tenant-isolation.ts",
    "hardening:recover-messages": "npx tsx scripts/hardening/recover-orphaned-messages.ts",
    "hardening:recover-messages-apply": "npx tsx scripts/hardening/recover-orphaned-messages.ts --apply",
    "hardening:create-development": "npx tsx scripts/hardening/create-development-safe.ts"
  },
  "dependencies": {
    "@openhouse/api": "1.0.0",
    "@openhouse/db": "0.1.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@supabase/auth-helpers-nextjs": "^0.8.7",
    "@supabase/supabase-js": "^2.88.0",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.0",
    "csv-parse": "^5.5.6",
    "dom-helpers": "^5.2.1",
    "fast-equals": "^5.0.1",
    "jspdf": "^2.5.2",
    "jszip": "^3.10.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.454.0",
    "nanoid": "^5.0.7",
    "next": "^14.2.18",
    "openai": "^4.73.0",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^2.4.5",
    "postcss": "^8",
    "prop-types": "^15.8.1",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "recharts": "^2.13.3",
    "recharts-scale": "^0.4.5",
    "resend": "^6.9.3",
    "swr": "^2.2.5",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.1",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/pdf-parse": "^1.1.5",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "typescript": "^5"
  }
}
