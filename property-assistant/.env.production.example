# ================================================================
# OpenHouse AI - Production Environment Variables
# ================================================================
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to version control
# ================================================================

# ----------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------
NODE_ENV=production
DEFAULT_TENANT_SLUG=your-default-tenant

# ----------------------------------------------------------------
# Domain Configuration
# ----------------------------------------------------------------
# Tenant Portal (Homeowner/Resident facing)
NEXT_PUBLIC_APP_BASE_URL=https://app.openhouseai.ie

# Developer Portal
NEXT_PUBLIC_DEVELOPER_PORTAL_URL=https://developers.openhouseai.ie

# ----------------------------------------------------------------
# Supabase Configuration (REQUIRED)
# ----------------------------------------------------------------
# Get these from https://app.supabase.com/project/_/settings/api

# Public (safe for client-side)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Server-side ONLY (NEVER expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# ----------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------
# Supabase Postgres connection string
DATABASE_URL=postgresql://postgres.your-project:password@aws-0-region.pooler.supabase.com:6543/postgres
POSTGRES_URL=postgresql://postgres.your-project:password@aws-0-region.pooler.supabase.com:5432/postgres

# Database connection pool settings (optional)
PGHOST=aws-0-region.pooler.supabase.com
PGPORT=6543
PGUSER=postgres.your-project
PGPASSWORD=your-db-password
PGDATABASE=postgres
DATABASE_REGION=ireland-1

# ----------------------------------------------------------------
# OpenAI Configuration (REQUIRED)
# ----------------------------------------------------------------
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# ----------------------------------------------------------------
# Vector Search Configuration
# ----------------------------------------------------------------
# Table names for vector embeddings (default values)
VECTOR_TABLE=doc_chunks
VECTOR_DIM=3072
EMBEDDING_MODEL=text-embedding-3-large

# ----------------------------------------------------------------
# Authentication & Security (REQUIRED)
# ----------------------------------------------------------------
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-random-session-secret-min-32-characters-long
JWT_SECRET=your-random-jwt-secret-min-32-characters-long

# Master admin API key for cross-tenant management
MASTER_ADMIN_API_KEY=your-secure-master-admin-key-here

# ----------------------------------------------------------------
# Email Configuration (Resend)
# ----------------------------------------------------------------
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
MAIL_FROM=noreply@openhouseai.ie
MAIL_TO=support@openhouseai.ie

# ----------------------------------------------------------------
# Payment Processing (Stripe) - Optional
# ----------------------------------------------------------------
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# ----------------------------------------------------------------
# External Services - Optional
# ----------------------------------------------------------------
# Google Maps for location features
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ----------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------
ENABLE_ANALYTICS=true
ENABLE_CHAT_HISTORY=true
ENABLE_THEME_CUSTOMIZATION=true
ENABLE_QR_ONBOARDING=true

# ----------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ----------------------------------------------------------------
# Logging & Monitoring
# ----------------------------------------------------------------
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# ----------------------------------------------------------------
# Build Configuration
# ----------------------------------------------------------------
# Vercel-specific (automatically set by Vercel)
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=auto-generated-by-vercel.app
# VERCEL_GIT_COMMIT_SHA=auto-generated
