{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@openhouse/api": ["../api/src/index.ts"],
      "@openhouse/api/*": ["../api/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
