# Application
NEXT_PUBLIC_APP_BASE_URL=http://localhost:5000
DEFAULT_TENANT_SLUG=seaview
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWT_SECRET=
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Database Configuration
POSTGRES_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:password@localhost:5432/openhouse

# Database Connection Pool Settings
DB_POOL_MAX=20                    # Maximum pool connections (production: 20, dev: 10)
DB_POOL_MIN=2                     # Minimum idle connections (production: 5, dev: 2)
DB_POOL_IDLE_MS=30000             # Idle timeout in milliseconds (30 seconds)
DB_POOL_CONN_TIMEOUT_MS=5000      # Connection timeout in milliseconds (5 seconds)
DATABASE_SSL=false                # Enable SSL (auto-detected for Supabase, set true for production)

# OpenAI Configuration
OPENAI_API_KEY=

# Stripe Configuration (for SaaS billing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Session & Security
SESSION_SECRET=change-this-to-a-random-string-in-production-min-32-chars

# Resend Email (optional)
RESEND_API_KEY=re_your_resend_api_key

# Google Maps (optional)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Monitoring (optional)
SENTRY_DSN=

# Integration Security
INTEGRATION_ENCRYPTION_KEY=        # 64-char hex string for AES-256 key derivation

# Microsoft (OneDrive/SharePoint/Dynamics 365)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=common         # 'common' for multi-tenant

# Google (Sheets/Drive)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Salesforce
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=

# HubSpot
HUBSPOT_CLIENT_ID=
HUBSPOT_CLIENT_SECRET=

# Dynamics 365 (if separate from Microsoft general)
DYNAMICS_CLIENT_ID=
DYNAMICS_CLIENT_SECRET=

# Cron Job Auth
CRON_SECRET=

# Rate limiting (optional, for Redis-based)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
