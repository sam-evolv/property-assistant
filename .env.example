# Application
NEXT_PUBLIC_APP_BASE_URL=http://localhost:5000
DEFAULT_TENANT_SLUG=seaview
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWT_SECRET=
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Database Configuration
POSTGRES_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:password@localhost:5432/openhouse

# Database Connection Pool Settings
DB_POOL_MAX=20                    # Maximum pool connections (production: 20, dev: 10)
DB_POOL_MIN=2                     # Minimum idle connections (production: 5, dev: 2)
DB_POOL_IDLE_MS=30000             # Idle timeout in milliseconds (30 seconds)
DB_POOL_CONN_TIMEOUT_MS=5000      # Connection timeout in milliseconds (5 seconds)
DATABASE_SSL=false                # Enable SSL (auto-detected for Supabase, set true for production)

# OpenAI Configuration
